{
  "manifest_version": 2,
  "name": "Blueblocking",
  "version": "1.0.0",
  "description": "Cutting-edge sleep-improvement product - upgrade to Pro for $99",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],

      "js": ["./JS/script.js"],
      "css": ["./style.css"]
    }
  ],
  "browser_action": {
    "default_icon": "128.png",
    "default_popup": "popup.html"
  }
}
